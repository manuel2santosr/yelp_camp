<% layout('layouts/boilerplate') %> 
<div id="cluster-map"></div>

<h1>All Campgrounds</h1>
<% for(let camp of camps) { %>
    <div class="card mb-3" >
        <div class="row">
            <div class="col-md-4">
                <% if (camp.images.length) { %>
                    <img src="<%= camp.images[0].url %>" alt="" class="img-fluid">
                <% } else { %>
                    <img src="https://res.cloudinary.com/dw3te2cwp/image/upload/v1650861688/yelp_camp/p8gd6pksit8bc8lkyl2u.jpg" alt="" class="img-fluid">
                <% } %> 
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <div class="card-title">
                        <h5 class="card-title"><%= camp.title %></h5>
                        <p class="card-text"><%= camp.description %></p>
                        <p class="card-text">
                            <small class="text-muted"><%= camp.location %></small>
                        </p>
                        <a class="btn btn-primary" href="/campgrounds/<%= camp._id %>"><%= camp.title %></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
<% } %>

<script>
    const mapToken = '<%- process.env.MAPBOX_TOKEN %>'
    const camps = {features: <%- JSON.stringify(camps) %>}
  </script>
<script src="/javascripts/clusterMap.js"></script>
